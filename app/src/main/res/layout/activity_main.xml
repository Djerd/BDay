<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/main_abl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:fitsSystemWindows="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="413dp"
            android:layout_height="match_parent"
            app:menu="@menu/toolbar_menu"
            app:navigationIcon="@drawable/ic_exit">

        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/cake"
        android:layout_width="match_parent"
        android:layout_height="621dp"
        android:layout_marginTop="113dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_background"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сегодня День Рождения!"
        android:textAlignment="center"
        android:textColor="@color/purpur"
        android:textSize="26dp"
        app:layout_constraintTop_toBottomOf="@+id/main_abl"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/list_names"
        android:layout_width="366dp"
        android:layout_height="497dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="111dp"
        android:textColor="@color/blue"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="125dp"
        android:layout_height="51dp"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/blue"
        android:text="Добавить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_load"
        android:layout_width="125dp"
        android:layout_height="51dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/blue"
        android:text="Загрузить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>